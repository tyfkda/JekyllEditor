{
  "parser": "babel-eslint",

  "env": {
    "browser": true,
    "node": true
  },

  "rules": {
    "semi": [2, "never"],
    "default-case": 2,
    "no-self-compare": 2,
    "no-else-return": 2,
    "no-throw-literal": 2,
    "no-void": 2,
    "camelcase": [1, {"properties": "always"}],

    "comma-dangle": [1, 'always-multiline'],
    "no-multi-spaces": 2,

    "max-depth": [1, 3],
    "max-len": [1, 100, 2],
    "indent": [2, 2],
    "no-mixed-spaces-and-tabs": [2],

    "comma-style": [2, "last"],
    "brace-style": [2, "1tbs", {"allowSingleLine": true}],
    "consistent-this": [2, "DO NOT USE"],

    "object-curly-spacing": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "computed-property-spacing": [2, "never"],
    "space-before-function-paren": [2, "never"],
    "space-before-blocks": [2, "always"],
    "keyword-spacing": ["error"],

    "space-infix-ops": [2, {"int32Hint": false}],
    "no-spaced-func": [2],
    "no-trailing-spaces": [2],
    "space-in-parens": [2],
    "space-unary-ops": [2],
    "arrow-spacing": [2],

    "no-var": 2,
    "no-new-require": 2,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-multiple-empty-lines": [2, {
      "max": 1
    }],
    "no-unused-expressions": 0,
    "no-unused-vars": [1, {"vars": "all",
                           "args": "after-used",
                           "argsIgnorePattern": "^_",
                           "varsIgnorePattern": "([iI]gnored|^_)"}],
    "no-use-before-define": 0,
    "quotes": [2, "single"],
    "key-spacing": [2, {
      "beforeColon": false,
      "afterColon": true
    }],

    "constructor-super": 2,
    "no-class-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,

    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-const-assign": 2,
    "no-unreachable": 2,
    "no-unexpected-multiline": 2,
    "valid-typeof": 2,
    "use-isnan": 2,
    "prefer-const": 1
  }
}
